@model Customer
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/css/style.css"/>
    <title>Document</title>
</head>
<body>
    <div class="container">
        <div class="col-8 offset-2 mt-3 row text-center">
            <div class="col-sm-2"> <a href="/">Dashboard</a> </div>|
            <div class="col-sm-2"> <a href="/products">Products</a> </div>|
            <div class="col-sm-2"> <a href="/orders">Orders</a> </div>|
            <div class="col-sm-2"> Customers </div>|
            <div class="col-sm-2"> <a href="/">Settings</a> </div>
        </div>

        <div class="col-8 mt-4">
            <h5 style="text-decoration: underline;">Add a new order</h5>
            <form asp-action="NewCustomer" asp-controller="Home" method="POST">
                <div class="form-group row">
                    <label for="CustomerName" class="col-sm-2"> Customer: </label>
                    <input asp-for="Name" class="col-sm-6 form-control">
                    <span class="col-sm-12 text-danger text-center" asp-validation-for="Name"></span>
                </div>
                <button class="btn btn-primary offset-7"> Add </button>
            </form>
        </div>
            <input type="text" placeholder="search name..." class="col-2 offset-10 form-control mb-1">
        <div class="row">
            <table class="table">
                <thead>
                    <th> Customer Name </th>
                    <th> Created Date </th>
                    <th> Actions </th>
                </thead>
                <tbody>
                    @foreach (var person in ViewBag.Customers)
                    {
                        <tr>
                            <td> @person.Name </td>
                            <td> @person.UpdatedAt.ToShortDateString() </td>
                            <td> <a href="/delete/@person.CustomerId"><button class="btn btn-danger btn-sm"> Remove </button></a> </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</body>
</html>